<Window x:Class="GiftSetsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GiftSetsWPF"
        xmlns:views="clr-namespace:GiftSetsWPF.Views"
        mc:Ignorable="d"
        Title="Gift Sets Creator" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Button Content="Main Products View"
                    Height="25"
                    Command="{Binding Path=NavigateToMainProductsViewCommand}"/>
        </StackPanel>

        <ContentControl Grid.Column = "1" Content="{Binding Path=Navigation.CurrentView}">
            
        </ContentControl>
        
    </Grid>
</Window>
